
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
    <% if @user.errors.any? %>
    <div class = "alert">
    <%= @user.errors.count %> errors prohibited this product from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  <%= form_with model:@user, local:true do |f| %>
    <div class="form_group">
    <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:""%>
    </div>
    <div class="form_group">
    <label for="inputImage">Image</label>
    <%= f.attachment_field :profile_image %>
    </div>
    <div class="form_group">
    <label for="inputIntroduction">Introduction</label>
    <%= f.text_field :introduction, autofocus: true, id:"inputName", placeholder:""%>
    <div class="form_group">
    <%= f.submit 'Update User' %>
    </div>
    </div>
  <% end %>
  </div>
  </div>
</div>
</div>