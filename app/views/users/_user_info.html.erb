
<h2>User info</h2>
<%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %><br>
<table class="table">
        <tbody>
          <tr></tr>
            <tr>
              <th>name<%= user.name %><br></th>
            </tr>
            <tr>
              <th>introduction<%= user.introduction %></th>
            </tr>
        </tbody>
      </table>
<p><%= link_to edit_user_path(user.id), class: "btn btn-outline-secondary btn-block " do %>
  <i class="fas fa-user-cog"></i>
  <% end %>
</p>
 <h2>New book</h2>
<!-- form_with部分 -->
<%= form_with model: book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Create Book' %>
<% end %>

  
